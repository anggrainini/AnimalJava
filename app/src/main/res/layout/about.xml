<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="31dp"
        android:layout_marginStart="31dp"
        app:srcCompat="@drawable/photoicute"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/nama"
        app:layout_constraintRight_toRightOf="@+id/nama"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/about"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/nama" />

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/photo"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/photo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:text="Anggraini D. Puspitaningrum"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="54dp"
        app:layout_constraintRight_toRightOf="@+id/project"
        android:layout_marginTop="218dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rain.aini@gmail.com"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/photo"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/nama"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/photo" />

    <TextView
        android:id="@+id/project"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Project ini dibuat sebagai tugas akhir IAK Kelas Beginner.&#xA;&#xA; Quiz tentang anak hewan dalam bahasa &#xA; jawa mungkin terkesan dan terdengar asing di telinga kita, karena memang sudah jarang bahkan hampir punah untuk menyebut nama-nama anak hewan tersebut. Tapi semua bahasa warisan leluhur kita :) &#xA;&#xA; "
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/sumber"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="11dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/sumber"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Sumber : https://khsblog.net/2017/10/20/daftar-nama-anak-hewan-dalam-bahasa-jawa/"
        android:autoLink="web"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="25dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="41dp" />

</android.support.constraint.ConstraintLayout>