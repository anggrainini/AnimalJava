<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/soalSatu"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="64dp"
        android:text="Soal No. 1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/qSatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:text="Anak Banyak diarani ?"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/groupSoalSatu"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1" />

    <RadioGroup
        android:id="@+id/groupSoalSatu"
        android:layout_width="169dp"
        android:layout_height="129dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="152dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1">

        <RadioButton
            android:id="@+id/radioMeri"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Meri"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="153dp" />

        <RadioButton
            android:id="@+id/radioBlengur"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Blengur"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="200dp" />

        <RadioButton
            android:id="@+id/radioKuthuk"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Kuthuk"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="248dp" />

        <RadioButton
            android:id="@+id/radioKroto"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Kroto"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="299dp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="181dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorAccent"
        android:text="Submit"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:onClick="submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <ImageView
        android:id="@+id/imgDuck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupSoalSatu"
        app:srcCompat="@drawable/ic_duck_307155_640"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>